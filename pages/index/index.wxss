/**app.wxss**/

.container {
  width: 100%;
  display: flex;
  flex: 1;
  flex-direction: column;
  /* align-items: center; */
  justify-content: space-between;
  /* padding: 200rpx 0; */
  box-sizing: border-box;
  overflow: hidden;
  background: "red";
  
}

#area:active {
  background-color: #686868;
  opacity: 0.5;
}

.footer {
  width: 100%;
  height: 100rpx;
  /* border: 1px solid red; */
  position: fixed;
  bottom: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

page {
  overflow: hidden;
}

.footer image {
  width: 50rpx;
  height: 50rpx;
}

.img text {
  font-size: 25rpx;
  color: white;
  font-family: '微软雅黑';
  font-weight: bold;
}

.img {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  width: 100rpx;
  height: 100rpx;
  /* border: 1px solid red; */
  background: #339fea;
  border-radius: 50rpx;
  opacity: 0.9;
}

.banci_img {
  position: absolute;
  margin-left: 5rpx;
  margin-top: -10rpx;
}

.banci_title {
  position: relative;
  top: 22rpx;
}

.wangqi_img {
  position: absolute;
  margin-top: -19rpx;
}

.wangqi_title {
  position: relative;
  top: 22rpx;
}

